<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Or_Email_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISBLANK(Phone), ISBLANK(Email))</errorConditionFormula>
    <errorMessage>You must enter either a phone number or an email address.</errorMessage>
</ValidationRule>
